<script src="http://maps.google.com/maps?file=api&v=2&key=<%= google_api_key() %>" type="text/javascript"></script>
<script type="text/javascript">
//<![CDATA[
function load() {
  if (GBrowserIsCompatible()) {
    var map = new GMap2(document.getElementById("map"));
	var latLong = new GLatLng(<%=h google_script.geo_location.to_s %>);
    map.setCenter(latLong, 13);
	map.addOverlay(new GMarker(latLong));
	map.addControl(new GSmallMapControl());
    map.addControl(new GMapTypeControl());
  }
}
//]]>
</script>