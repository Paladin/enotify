<h2>Editing Violation Record</h2>

<% form_for(@violation_record) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :tax_key %><br />
    <%= f.text_field :tax_key %>
  </p>
  <p>
    <%= f.label :record_number %><br />
    <%= f.text_field :record_number %>
  </p>
  <p>
    <%= f.label :incident_time %><br />
    <%= f.datetime_select :incident_time %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @violation_record %> |
<%= link_to 'Back', violation_records_path %>
