<h1>Listing Service_Requests</h1>

<%= link_to 'Atom', url_for({:format => :atom}.merge(params) ) %> | 
<%= link_to 'iCal', url_for({:format => :ics}.merge(params)) %>
<br/>

<%= render :partial => "maps/map_incidents", :object => @service_requests %>

<table>
  <tr>
	<th>Record Number</th>
	<th>Tax Key</th>
	<th>Time</th>
	<th>Description</th>
	<th>Address</th>
  </tr>

<% for service_request in @service_requests %>
  <tr>
  	<td><%=h service_request.record_number %></td>
  	<td><%=h service_request.tax_key %></td>
  	<td><%=h service_request.incident_time.to_formatted_s(:short) %></td>
  	<td><%=h service_request.description %></td>
 	<td><%=simple_format service_request.address.to_s %></td>
  </tr>
  <tr>
    <td colspan="5">
	<%= link_to 'Show', service_request %>
	<%= link_to 'Edit', edit_service_request_path(service_request) %>
	<%= link_to 'Destroy', service_request, :confirm => 'Are you sure?', :method => :delete %>
	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Service Request', new_service_request_path %>
