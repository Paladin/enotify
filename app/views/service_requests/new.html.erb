<h1>New Service Request</h1>

<% form_for(@service_request) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :tax_key %><br />
    <%= f.text_field :tax_key %>
  </p>
  <p>
    <%= f.label :record_number %><br />
    <%= f.text_field :record_number %>
  </p>
  <p>
    <%= f.label :incident_time %><br />
    <%= f.datetime_select :incident_time %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', service_requests_path %>
