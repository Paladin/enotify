<div>
    <h3><a href="<%= polymorphic_url incident, :only_path => false %>"><%= incident.record_number %></a></h3>
	<% if incident.description -%>
	<p><%=h incident.description %></p>
	<% end -%>
	<% if incident.resolution %>
	<p>Resolution: <%=h incident.resolution %></p>
	<% end %>
	<% if incident.tax_key %>
	<p>Tax Key: <%= incident.tax_key %></p>
	<% end %>
    <p><%= incident.local_time.to_formatted_s(:simple) %></p>
    <p><%=simple_format incident.address.to_s %></p>
    <p><%= incident.geo_location.to_s %></p>
</div>
